@model IEnumerable<BreadSpread.Models.Encomenda_Produto>

@{
    ViewBag.Title = "Producao";
    Layout = "~/Views/Shared/_PadeiroLayout.cshtml";
}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Produção</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default ">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-sm-10 align-middle">
                                    Lista de produção
                                </div>
                            </div>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>Preço</th>
                                        <th>Ingredientes</th>
                                        <th>Quantidade</th>
                                        <th>Produção</th>
                                    </tr>
                                </thead>
                                <tbody>
									@foreach(var enc_prod in Model)
                                    {
                                        <tr class="odd gradeA">
                                            <td>@enc_prod.Produto.designacao</td>
                                            <td>@enc_prod.Produto.preco</td>
                                            <td>@enc_prod.Produto.ingredientes</td>
                                            <td>@enc_prod.quant</td>
                                            <td>
                                                @Html.ActionLink("Feito", "CheckProduto", new { idEnc = enc_prod.idEnc, idProd = enc_prod.idProd }, new { @class = "btn btn-success" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <!-- /.table-responsive -->
                            
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            
        </div>
        <!-- /#page-wrapper -->
