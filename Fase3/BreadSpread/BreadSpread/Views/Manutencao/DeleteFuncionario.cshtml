									<dd>
										@Html.DisplayFor(model => model.preco)
									</dd>

									<dt>
										@Html.DisplayNameFor(model => model.imagem)
									</dt>

									<dd>
										@Html.DisplayFor(model => model.imagem)
									</dd>

									<dt>
										@Html.DisplayNameFor(model => model.peso)
									</dt>

									<dd>
										@Html.DisplayFor(model => model.peso)
									</dd>

								</dl>

								@using (Html.BeginForm())
		{
						@Html.AntiForgeryToken()

						<div class="form-actions no-color">
							<input type="submit" value="Eliminar" class="btn btn-lg btn-danger" />
							@Html.ActionLink("Voltar", "IndexProduto",null, new { @class = "btn btn-lg btn-primary" })
						</div>
}
							</div>


						</div>
