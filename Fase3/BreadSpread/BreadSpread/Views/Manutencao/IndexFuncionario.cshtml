@model IEnumerable<BreadSpread.Models.Funcionario>


@{
	ViewBag.Title = "Funcionarios";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

		<div id="page-wrapper">
			<div class="row">
				<div class="col-lg-12">
					<h1 class="page-header">Funcionários</h1>
				</div>
				<!-- /.col-lg-12 -->
			</div>
			<!-- /.row -->
			<div class="row">
				<div class="col-lg-12">
					<div class="panel panel-default ">
						<div class="panel-heading">
							<div class="row">
								<div class="col-sm-10 align-middle">
									Todos os Funcionários
								</div>
								<div class="col-sm-2">
									@Html.ActionLink("Adicionar", "CreateFuncionario", null, new { @class = "btn btn-success" })
								</div>
							</div>
						</div>
						<!-- /.panel-heading -->
						<div class="panel-body">
							<table class="table table-striped table-bordered table-hover" id="dataTables-example">
								<thead>
									<tr>
										<th>Id</th>
										<th>Nome</th>
										<th>Contacto</th>
										<th>Estado</th>
										<th>Distribuição</th>
										<th>Alterar/Desativar</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
									<tr class="odd gradeA">
										<td>@Html.DisplayFor(modelItem => item.idFunc)</td>
										<td>@Html.DisplayFor(modelItem => item.nome)</td>
										<td>@Html.DisplayFor(modelItem => item.contacto)</td>
										<td>@Html.DisplayFor(modelItem => item.estadoConta)</td>
										<td>@Html.DisplayFor(modelItem => item.distribuicao)</td>
										<td>
											@Html.ActionLink("Alterar", "EditFuncionario", new { id = item.idFunc }, new { @class = "btn btn-success" })
											@Html.ActionLink("Desativar", "DeleteFuncionario", new { id = item.idFunc }, new { @class = "btn btn-danger" })
										</td>
									</tr>
									}
								</tbody>
							</table>
							<!-- /.table-responsive -->

						</div>
						<!-- /.panel-body -->
					</div>
					<!-- /.panel -->
				</div>
				<!-- /.col-lg-12 -->
			</div>

		</div>
		<!-- /#page-wrapper -->

	