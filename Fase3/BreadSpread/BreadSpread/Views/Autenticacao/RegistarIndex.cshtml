@model BreadSpread.Models.Cliente


@{
	ViewBag.Title = "Registar";
	Layout = null;
}
<head>
	<link crossorigin="anonymous" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" rel="stylesheet">
	<!-- Custom styles for this template -->
	<link href="/Content/signin.css" rel="stylesheet">
	<title>@ViewBag.Title</title>
	<script src="https://cdn.jsdelivr.net/npm/gijgo@1.9.6/js/gijgo.min.js" type="text/javascript"></script>
	<link href="https://cdn.jsdelivr.net/npm/gijgo@1.9.6/css/gijgo.min.css" rel="stylesheet" type="text/css" />
</head>

<body class="text-center" cz-shortcut-listen="true">
	
	@using (Html.BeginForm("AdicionarCliente", "Autenticacao", FormMethod.Post))
	{
		@Html.AntiForgeryToken()

	<div class="form-signin" style="padding-top: 150px;">
		<a href="index.html"> <img alt="" class="mb-4" height="300" src="/images/logo.png" width="300"></a><!--corrigir link-->
		<h1 class="h3 mb-3 font-weight-normal">@ViewBag.Title</h1>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })

		<div class="form-group">
			@Html.TextBoxFor(model => model.nome, new { @class = "form-control", placeholder = "Nome", type = "text" })
			@Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
		</div>
		<div class="form-group">
			@Html.TextBoxFor(model => model.email, new { @class = "form-control", placeholder = "breadspread@email.pt", type = "email" })
			@Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
		</div>
		<div class="form-group">
			@Html.TextBoxFor(model => model.password, new { @class = "form-control", placeholder = "password", type = "password" })
			@Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
		</div>
		<div class="form-row">
			<div class="form-group col-md-5">
				@Html.TextBoxFor(model => model.sexo, new { @class = "form-control", placeholder = "genero", type = "text" })
				@Html.ValidationMessageFor(model => model.sexo, "", new { @class = "text-danger" })
			</div>
			<div class="form-group col-md-7">
				<!--dar review ao calendar-->
				<div class="date" id="datepicker">
					@Html.TextBoxFor(model => model.dataNasc, new { @class = "form-control", name = "date" })
					@Html.ValidationMessageFor(model => model.dataNasc, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>
		<div class="form-group">
			@Html.TextBoxFor(model => model.rua, new { @class = "form-control", placeholder = "Rua da Padaria", type = "text" })
			@Html.ValidationMessageFor(model => model.rua, "", new { @class = "text-danger" })
		</div>
		<div class="form-group">
			@Html.TextBoxFor(model => model.numPorta, new { @class = "form-control", placeholder = "12", type = "number" })
			@Html.ValidationMessageFor(model => model.numPorta, "", new { @class = "text-danger" })
		</div>

		<div class="form-row">
			<div class="form-group col-md-5">
				@Html.TextBoxFor(model => model.cidade, new { @class = "form-control", placeholder = "Braga", type = "text" })
				@Html.ValidationMessageFor(model => model.cidade, "", new { @class = "text-danger" })
			</div>
			<div class="form-group col-md-4">
				@Html.TextBoxFor(model => model.freguesia, new { @class = "form-control", placeholder = "Gualtar", type = "text" })
				@Html.ValidationMessageFor(model => model.freguesia, "", new { @class = "text-danger" })
			</div>
			<div class="form-group col-md-3">
				@Html.TextBoxFor(model => model.codPostal, new { @class = "form-control", placeholder = "4710-100", type = "text" })
				@Html.ValidationMessageFor(model => model.codPostal, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-6">
				@Html.TextBoxFor(model => model.NIF, new { @class = "form-control", placeholder = "123456789", type = "number" })
				@Html.ValidationMessageFor(model => model.NIF, "", new { @class = "text-danger" })
			</div>
			<div class="form-group col-md-6">
				@Html.TextBoxFor(model => model.contacto, new { @class = "form-control", placeholder = "987654321", type = "number" })
				@Html.ValidationMessageFor(model => model.contacto, "", new { @class = "text-danger" })
			</div>
			<div class="form-group col-md-6">
				@Html.TextBoxFor(model => model.estadoConta, new { @class = "form-control", placeholder = "ativo", type = "string" })
				@Html.ValidationMessageFor(model => model.estadoConta, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<button type="submit" value="Create" class="btn btn-default" />
			</div>
		</div>
	</div>

	}
</body>

